{{#if addNewResponse}}
<h1>Add a new answer</h1>
<div>
  <form class="response_submit">
    <div class="form-group">
      <label for="answer">Answer</label>
      {{input value=answer id="answer"}}
    </div>
    <br>
    <div class="form-group">
      <label for="author">Author</label>
      {{input value=author id="author"}}
    </div>
    <button class="save"{{action 'save4'}}>Save</button>
  </form>
</div>
{{else}}
  <button class="newAnswer"{{action 'responseFormShow'}}>New Answer</button>
{{/if}}
